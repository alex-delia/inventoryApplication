<%- include('./header.ejs') %>
    <h1 class="title">
        <%= title %>
    </h1>
    <ul>
        <% category_list.forEach(category=> { %>
            <li class="fs-4">
                <a href="<%= category.url%>"
                    class="link-offset-3 link-underline link-underline-opacity-0 link-underline-opacity-75-hover">
                    <%= category.name %>
                </a>
                <span>- <%= category.productCount %> <%- category.productCount===1 ? 'product' : 'products' %></span>
            </li>
            <% }) %>
    </ul>
    <%- include('./footer.ejs') %>