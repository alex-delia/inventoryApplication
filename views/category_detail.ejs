<%- include('./header.ejs') %>
<h1 class="title">
    <%= title %>
</h1>

<h5 class='text-center'>
    <%= category.description %>
</h5>

<% if (category_products.length === 0) { %>
<h5>No Products Found</h5>
<% } %>

<ul>
    <% category_products.forEach(product => { %>
    <li class="mb-3">
        <h5>
            <a href="<%= product.url %>" class="link-offset-3 link-underline 
                link-underline-opacity-0 link-underline-opacity-75-hover">
                <%= product.name %>
            </a>
        </h5>
        <span><%= product.description %></span>
    </li>
    <% }) %>
</ul>
<hr>
<a href="<%= category.url %>/update" class="link-offset-3 link-underline 
    link-underline-opacity-0 link-underline-opacity-75-hover">
    Update Category
</a>

<%- include('./footer.ejs') %>